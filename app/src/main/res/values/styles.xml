<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemePink" parent="Theme.AppCompat">
        <item name="colorPrimary">#d81b60</item>
        <item name="colorPrimaryDark">#a00037</item>
        <item name="colorAccent">#ff5c8d</item>
        <item name="android:navigationBarColor">#a00037</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">@drawable/background_pink</item>
        <item name="android:colorButtonNormal">#ff5c8d</item>
    </style>

    <style name="ThemeBlue" parent="Theme.AppCompat">
        <item name="colorPrimary">#303f9f</item>
        <item name="colorPrimaryDark">#001970</item>
        <item name="colorAccent">#666ad1</item>
        <item name="android:navigationBarColor">#283593</item>
        <item name="android:windowBackground">@drawable/background_blue</item>
        <item name="android:textColor">#000000</item>
        <item name="android:colorButtonNormal">#666ad1</item>
    </style>

    <style name="ThemeGreen" parent="Theme.AppCompat">
        <item name="colorPrimary">#66bb6a</item>
        <item name="colorPrimaryDark">#338a3e</item>
        <item name="colorAccent">#98ee99</item>
        <item name="android:windowBackground">@drawable/background_green</item>
        <item name="android:navigationBarColor">#338a3e</item>
        <item name="android:textColor">#000000</item>
        <item name="android:colorButtonNormal">#66bb6a</item>
    </style>

</resources>
